import datetime
import serial
import time
from mock_serial import MockSerial

def get_sensor_data(use_mock=True):
    ser = MockSerial('/dev/ttyUSB0', 9600, timeout=1) if use_mock else serial.Serial('/dev/ttyUSB0', 9600, timeout=1)
    ser.flush()

    while True:
        if ser.in_waiting > 0:
            line = ser.readline().decode('utf-8').rstrip()
            if line in ["ON", "OFF"]:
                current_datetime = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')
                motion_status = "Motion Detected" if line == "ON" else "Motion Not Detected"
                sensor_data = {
                    "MotionStatus": motion_status,
                    "Time": current_datetime
                }
                yield sensor_data
            else:
                print("Invalid data received")
        time.sleep(2)  # Adjust to match the sensor's frequency

# Test routine to print sensor data
if __name__ == "__main__":
    for data in get_sensor_data(use_mock=True):
        print(data)
        # You can break out of the loop after a certain number of prints, if needed
